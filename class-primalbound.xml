<?xml version="1.0" encoding="utf-8"?>
<elements>
  <info>
    <name>Primalbound</name>
    <description>A primal melee class inspired by weregorillas. Gains bonuses and breath weapon during transformation. No spellcasting.</description>
    <author>William Burruss</author>
    <update version="1.0">
      <file name="class-primalbound.xml" url="https://example.com/class-primalbound.xml" />
    </update>
  </info>

  <element name="Primalbound" type="Class" source="Homebrew" id="ID_WILLIAM_CLASS_PRIMALBOUND">
    <description>
      <p>Primalbound are fierce warriors who channel a bestial spirit, unleashing tremendous power and resilience in their transformed state. They specialize in devastating melee attacks, mighty leaps, and primal roars.</p>
    </description>
    <setters>
      <set name="short">A beastial warrior who transforms in battle and unleashes devastating primal fury.</set>
      <set name="hd">d10</set>
      <set name="spellcasting_ability" value="None" />
    </setters>
    <rules>
      <grant type="Proficiency" id="ID_PROFICIENCY_ARMOR_PROFICIENCY_LIGHT_ARMOR" />
      <grant type="Proficiency" id="ID_PROFICIENCY_ARMOR_PROFICIENCY_MEDIUM_ARMOR" />
      <grant type="Proficiency" id="ID_PROFICIENCY_ARMOR_PROFICIENCY_SHIELDS" />
      <grant type="Proficiency" id="ID_PROFICIENCY_WEAPON_PROFICIENCY_SIMPLE_WEAPONS" />
      <grant type="Proficiency" id="ID_PROFICIENCY_WEAPON_PROFICIENCY_MARTIAL_WEAPONS" />
      <grant type="Proficiency" id="ID_PROFICIENCY_SAVINGTHROW_STRENGTH" />
      <grant type="Proficiency" id="ID_PROFICIENCY_SAVINGTHROW_CONSTITUTION" />
      <select type="Proficiency" name="Skill Proficiency (Primalbound)" supports="ID_PROFICIENCY_SKILL_ATHLETICS|ID_PROFICIENCY_SKILL_ACROBATICS|ID_PROFICIENCY_SKILL_SURVIVAL|ID_PROFICIENCY_SKILL_INTIMIDATION|ID_PROFICIENCY_SKILL_NATURE" number="2"/>
    </rules>
  </element>

  <!-- Features -->
  <element name="Transformation" type="Class Feature" source="Homebrew" id="ID_WILLIAM_CLASS_FEATURE_PRIMALBOUND_TRANSFORMATION">
    <description>
      <p>You can enter a transformation as a bonus action, similar to rage. While transformed (for 1 minute):</p>
      <ul>
        <li>+2 to melee damage rolls</li>
        <li>+1 AC</li>
        <li>Resistance to nonmagical bludgeoning, piercing, and slashing</li>
        <li>Once per transformation: 15-ft cone breath weapon (Dex save, 2d6 damage)</li>
      </ul>
      <p>Uses per long rest = proficiency bonus.</p>
    </description>
    <rules>
      <stat name="primalbound transformation:count" value="2" level="1" />
      <stat name="primalbound transformation:count" value="1" level="3" />
      <stat name="primalbound transformation:count" value="1" level="6" />
      <stat name="primalbound transformation:count" value="1" level="12" />
      <stat name="primalbound transformation:count" value="1" level="17" />
      <stat name="primalbound transformation:count" value="93" level="20" />
    </rules>
  </element>

  <element name="Burst of Brawn" type="Class Feature" source="Homebrew" id="ID_WILLIAM_CLASS_FEATURE_PRIMALBOUND_BRAWN">
    <description>
      <p>You gain advantage on Strength checks and saving throws while not wearing heavy armor.</p>
    </description>
  </element>

  <element name="Mighty Leap" type="Class Feature" source="Homebrew" id="ID_WILLIAM_CLASS_FEATURE_PRIMALBOUND_LEAP">
    <description>
      <p>Triple your jump distance. You take no fall damage from heights under 40 feet when landing on your feet.</p>
    </description>
  </element>

  <element name="Extra Attack" type="Class Feature" source="Homebrew" id="ID_WILLIAM_CLASS_FEATURE_PRIMALBOUND_EXTRA_ATTACK">
    <description>
      <p>Starting at 5th level, you can attack twice whenever you take the Attack action on your turn.</p>
    </description>
    <rules>
      <stat name="extra attack:count" value="2" level="5" bonus="extra attack" />
    </rules>
  </element>

  <element name="Advanced Transformation" type="Class Feature" source="Homebrew" id="ID_WILLIAM_CLASS_FEATURE_PRIMALBOUND_ADVANCED_TRANSFORMATION">
    <description>
      <p>At 11th level, gain 5 HP regen per round if below half HP, and score a critical hit on 19â€“20 while transformed.</p>
    </description>
  </element>

  <element name="Primal Dominance" type="Class Feature" source="Homebrew" id="ID_WILLIAM_CLASS_FEATURE_PRIMALBOUND_DOMINANCE">
    <description>
      <p>At 18th level, your transformation lasts 10 minutes. You are immune to fear and charm while transformed.</p>
    </description>
  </element>

  <element name="Ability Score Improvement" type="Class Feature" source="Homebrew" id="ID_WILLIAM_CLASS_FEATURE_PRIMALBOUND_ASI">
    <description>
      <p>Increase one ability score by 2 or two by 1. Maximum of 20.</p>
    </description>
    <rules>
      <select type="Class Feature" name="ASI (Primalbound)" supports="Improvement Option,Primalbound" />
    </rules>
  </element>

  <!-- Progression -->
  <element name="Primalbound Progression" type="Class Progression" source="Homebrew" id="ID_WILLIAM_CLASS_PRIMALBOUND_PROGRESSION">
    <supports>ID_WILLIAM_CLASS_PRIMALBOUND</supports>
    <progression>
      <level index="1" feature="ID_WILLIAM_CLASS_FEATURE_PRIMALBOUND_TRANSFORMATION,ID_WILLIAM_CLASS_FEATURE_PRIMALBOUND_BRAWN" />
      <level index="2" />
      <level index="3" feature="ID_WILLIAM_CLASS_FEATURE_PRIMALBOUND_LEAP" />
      <level index="4" feature="ID_WILLIAM_CLASS_FEATURE_PRIMALBOUND_ASI" />
      <level index="5" feature="ID_WILLIAM_CLASS_FEATURE_PRIMALBOUND_EXTRA_ATTACK" />
      <level index="8" feature="ID_WILLIAM_CLASS_FEATURE_PRIMALBOUND_ASI" />
      <level index="11" feature="ID_WILLIAM_CLASS_FEATURE_PRIMALBOUND_ADVANCED_TRANSFORMATION" />
      <level index="12" feature="ID_WILLIAM_CLASS_FEATURE_PRIMALBOUND_ASI" />
      <level index="16" feature="ID_WILLIAM_CLASS_FEATURE_PRIMALBOUND_ASI" />
      <level index="18" feature="ID_WILLIAM_CLASS_FEATURE_PRIMALBOUND_DOMINANCE" />
      <level index="19" feature="ID_WILLIAM_CLASS_FEATURE_PRIMALBOUND_ASI" />
    </progression>
  </element>
</elements>



