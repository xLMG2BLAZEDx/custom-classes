<?xml version="1.0" encoding="utf-8"?>
<elements>
  <info>
    <name>Primalbound</name>
    <description>A primal melee class inspired by weregorillas. Gains bonuses and breath weapon during transformation. No spellcasting.</description>
    <author>William Burruss</author>
    <update version="1.0">
      <file name="class-primalbound.xml" url="https://example.com/class-primalbound.xml" />
    </update>
  </info>

  <element name="Primalbound" type="Class" source="Homebrew" id="ID_WILLIAM_CLASS_PRIMALBOUND">
    <description>
      <p>Primalbound are fierce warriors who channel a bestial spirit, unleashing tremendous power and resilience in their transformed state.</p>
    </description>
    <setters>
      <set name="short">Primal shapeshifter with feral might and breath weapon.</set>
      <set name="hd">d10</set>
      <set name="spellcasting_ability" value="None" />
    </setters>
    <rules>
      <grant type="Proficiency" id="ID_PROFICIENCY_ARMOR_PROFICIENCY_LIGHT_ARMOR" />
      <grant type="Proficiency" id="ID_PROFICIENCY_ARMOR_PROFICIENCY_MEDIUM_ARMOR" />
      <grant type="Proficiency" id="ID_PROFICIENCY_ARMOR_PROFICIENCY_SHIELDS" />
      <grant type="Proficiency" id="ID_PROFICIENCY_WEAPON_PROFICIENCY_SIMPLE_WEAPONS" />
      <grant type="Proficiency" id="ID_PROFICIENCY_WEAPON_PROFICIENCY_MARTIAL_WEAPONS" />
      <grant type="Proficiency" id="ID_PROFICIENCY_SAVINGTHROW_STRENGTH" />
      <grant type="Proficiency" id="ID_PROFICIENCY_SAVINGTHROW_CONSTITUTION" />
      <select type="Proficiency" name="Skill Proficiency (Primalbound)" supports="ID_PROFICIENCY_SKILL_ATHLETICS|ID_PROFICIENCY_SKILL_ACROBATICS|ID_PROFICIENCY_SKILL_SURVIVAL|ID_PROFICIENCY_SKILL_INTIMIDATION|ID_PROFICIENCY_SKILL_NATURE" number="2"/>
    </rules>
  </element>

  <element name="Transformation" type="Class Feature" source="Homebrew" id="ID_WILLIAM_CLASS_FEATURE_PRIMALBOUND_TRANSFORMATION" level="1">
    <description>
      <p>Transform as a bonus action. While transformed: +2 melee damage, +1 AC, resistance to nonmagical B/P/S, and a 15-ft cone breath weapon (Dex save, 2d6 damage).</p>
    </description>
  </element>

  <element name="Burst of Brawn" type="Class Feature" source="Homebrew" id="ID_WILLIAM_CLASS_FEATURE_PRIMALBOUND_BRAWN" level="1">
    <description>
      <p>Advantage on Strength checks and saves while not wearing heavy armor.</p>
    </description>
  </element>

  <element name="Mighty Leap" type="Class Feature" source="Homebrew" id="ID_WILLIAM_CLASS_FEATURE_PRIMALBOUND_LEAP" level="3">
    <description>
      <p>Triple jump distance. No fall damage from heights under 40 ft when landing on your feet.</p>
    </description>
  </element>

  <element name="Extra Attack" type="Class Feature" source="Homebrew" id="ID_WILLIAM_CLASS_FEATURE_PRIMALBOUND_EXTRA_ATTACK" level="5">
    <description>
      <p>You can attack twice when you take the Attack action.</p>
    </description>
    <rules>
      <stat name="extra attack:count" value="2" level="5" bonus="extra attack" />
    </rules>
  </element>

  <element name="Advanced Transformation" type="Class Feature" source="Homebrew" id="ID_WILLIAM_CLASS_FEATURE_PRIMALBOUND_ADVANCED_TRANSFORMATION" level="11">
    <description>
      <p>Regain 5 HP per turn if below half HP. Crits on 19–20 while transformed.</p>
    </description>
  </element>

  <element name="Primal Dominance" type="Class Feature" source="Homebrew" id="ID_WILLIAM_CLASS_FEATURE_PRIMALBOUND_DOMINANCE" level="18">
    <description>
      <p>Transformation lasts 10 minutes. You are immune to frightened and charmed while transformed.</p>
    </description>
  </element>

  <!-- ASIs using standard builder format -->
  <element name="Ability Score Improvement" type="Class Feature" source="Homebrew" id="ID_WILLIAM_CLASS_FEATURE_PRIMALBOUND_ASI_4" level="4">
    <description>
      <p>When you reach 4th level, you can increase one ability score of your choice by 2, or two by 1. You can’t increase an ability score above 20 using this feature.</p>
    </description>
    <rules>
      <select type="Class Feature" name="Improvement Option" supports="Improvement Option,Primalbound" />
    </rules>
  </element>

  <element name="Ability Score Improvement" type="Class Feature" source="Homebrew" id="ID_WILLIAM_CLASS_FEATURE_PRIMALBOUND_ASI_8" level="8">
    <description>
      <p>When you reach 8th level, you can increase one ability score of your choice by 2, or two by 1. You can’t increase an ability score above 20 using this feature.</p>
    </description>
    <rules>
      <select type="Class Feature" name="Improvement Option" supports="Improvement Option,Primalbound" />
    </rules>
  </element>

  <element name="Ability Score Improvement" type="Class Feature" source="Homebrew" id="ID_WILLIAM_CLASS_FEATURE_PRIMALBOUND_ASI_12" level="12">
    <description>
      <p>When you reach 12th level, you can increase one ability score of your choice by 2, or two by 1. You can’t increase an ability score above 20 using this feature.</p>
    </description>
    <rules>
      <select type="Class Feature" name="Improvement Option" supports="Improvement Option,Primalbound" />
    </rules>
  </element>

  <element name="Ability Score Improvement" type="Class Feature" source="Homebrew" id="ID_WILLIAM_CLASS_FEATURE_PRIMALBOUND_ASI_16" level="16">
    <description>
      <p>When you reach 16th level, you can increase one ability score of your choice by 2, or two by 1. You can’t increase an ability score above 20 using this feature.</p>
    </description>
    <rules>
      <select type="Class Feature" name="Improvement Option" supports="Improvement Option,Primalbound" />
    </rules>
  </element>

  <element name="Ability Score Improvement" type="Class Feature" source="Homebrew" id="ID_WILLIAM_CLASS_FEATURE_PRIMALBOUND_ASI_19" level="19">
    <description>
      <p>When you reach 19th level, you can increase one ability score of your choice by 2, or two by 1. You can’t increase an ability score above 20 using this feature.</p>
    </description>
    <rules>
      <select type="Class Feature" name="Improvement Option" supports="Improvement Option,Primalbound" />
    </rules>
  </element>

  <!-- Class Progression -->
  <element name="Primalbound Progression" type="Class Progression" source="Homebrew" id="ID_WILLIAM_CLASS_PRIMALBOUND_PROGRESSION">
    <supports>ID_WILLIAM_CLASS_PRIMALBOUND</supports>
    <progression>
      <level index="1" feature="ID_WILLIAM_CLASS_FEATURE_PRIMALBOUND_TRANSFORMATION,ID_WILLIAM_CLASS_FEATURE_PRIMALBOUND_BRAWN" />
      <level index="3" feature="ID_WILLIAM_CLASS_FEATURE_PRIMALBOUND_LEAP" />
      <level index="4" feature="ID_WILLIAM_CLASS_FEATURE_PRIMALBOUND_ASI_4" />
      <level index="5" feature="ID_WILLIAM_CLASS_FEATURE_PRIMALBOUND_EXTRA_ATTACK" />
      <level index="8" feature="ID_WILLIAM_CLASS_FEATURE_PRIMALBOUND_ASI_8" />
      <level index="11" feature="ID_WILLIAM_CLASS_FEATURE_PRIMALBOUND_ADVANCED_TRANSFORMATION" />
      <level index="12" feature="ID_WILLIAM_CLASS_FEATURE_PRIMALBOUND_ASI_12" />
      <level index="16" feature="ID_WILLIAM_CLASS_FEATURE_PRIMALBOUND_ASI_16" />
      <level index="18" feature="ID_WILLIAM_CLASS_FEATURE_PRIMALBOUND_DOMINANCE" />
      <level index="19" feature="ID_WILLIAM_CLASS_FEATURE_PRIMALBOUND_ASI_19" />
    </progression>
  </element>

  <!-- Registration -->
  <element name="Classes" type="ClassContainer" source="Homebrew" id="ID_WILLIAM_CLASS_CONTAINER">
    <element type="Class" id="ID_WILLIAM_CLASS_PRIMALBOUND" />
  </element>
</elements>




