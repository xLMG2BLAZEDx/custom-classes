<?xml version="1.0" encoding="utf-8"?>
<elements>
  <info>
    <name>Primalbound</name>
    <author>William Burruss</author>
    <description>Martial shapeshifter class inspired by weregorillas. No spellcasting. Gains strength, defenses, and breath weapon while transformed.</description>
    <update version="1.0">
      <file name="class-primalbound.xml" url="https://example.com/class-primalbound.xml" />
    </update>
  </info>

  <element name="Primalbound" type="Class" source="Homebrew" id="ID_WILLIAM_CLASS_PRIMALBOUND">
    <description>
      <p>Primalbound are fierce warriors who channel a bestial spirit, unleashing tremendous power and resilience in their transformed state. They specialize in devastating melee attacks, mighty leaps, and unparalleled fortitude.</p>
    </description>
    <setters>
      <set name="short">Feral warriors who transform into powerful beasts of rage and resilience.</set>
      <set name="hd">d10</set>
      <set name="spellcasting_ability" value="None" />
    </setters>
    <rules>
      <grant type="Proficiency" id="ID_PROFICIENCY_ARMOR_PROFICIENCY_LIGHT_ARMOR" />
      <grant type="Proficiency" id="ID_PROFICIENCY_ARMOR_PROFICIENCY_MEDIUM_ARMOR" />
      <grant type="Proficiency" id="ID_PROFICIENCY_ARMOR_PROFICIENCY_SHIELDS" />
      <grant type="Proficiency" id="ID_PROFICIENCY_WEAPON_PROFICIENCY_SIMPLE_WEAPONS" />
      <grant type="Proficiency" id="ID_PROFICIENCY_WEAPON_PROFICIENCY_MARTIAL_WEAPONS" />
      <grant type="Proficiency" id="ID_PROFICIENCY_SAVINGTHROW_STRENGTH" />
      <grant type="Proficiency" id="ID_PROFICIENCY_SAVINGTHROW_CONSTITUTION" />
      <select type="Proficiency" name="Skill Proficiency (Primalbound)" supports="ID_PROFICIENCY_SKILL_ATHLETICS|ID_PROFICIENCY_SKILL_ACROBATICS|ID_PROFICIENCY_SKILL_SURVIVAL|ID_PROFICIENCY_SKILL_INTIMIDATION|ID_PROFICIENCY_SKILL_NATURE" number="2"/>
    </rules>
  </element>

  <element name="Burst of Brawn" type="Class Feature" source="Homebrew" id="ID_WILLIAM_CLASS_FEATURE_PRIMALBOUND_BURST_OF_BRAWN">
    <description>
      <p>You gain advantage on Strength checks and saving throws while not wearing heavy armor.</p>
    </description>
  </element>

  <element name="Primal Transformation" type="Class Feature" source="Homebrew" id="ID_WILLIAM_CLASS_FEATURE_PRIMALBOUND_PRIMAL_TRANSFORMATION">
    <description>
      <p>As a bonus action, you may transform into a primal beast for 1 minute. While transformed:</p>
      <ul>
        <li>Gain +2 to melee damage rolls</li>
        <li>Gain +1 AC</li>
        <li>Gain resistance to nonmagical bludgeoning, piercing, and slashing damage</li>
        <li>Once per transformation, you may use a 15-ft cone breath weapon (Dex save DC = 8 + proficiency + Strength) for 2d6 damage (half on save)</li>
      </ul>
      <p>You can transform a number of times equal to your proficiency bonus per long rest.</p>
    </description>
  </element>

  <element name="Bestial Resilience" type="Class Feature" source="Homebrew" id="ID_WILLIAM_CLASS_FEATURE_PRIMALBOUND_BESTIAL_RESILIENCE">
    <description>
      <p>While transformed, you have resistance to bludgeoning, piercing, and slashing damage from nonmagical weapons.</p>
    </description>
  </element>

  <element name="Mighty Leap" type="Class Feature" source="Homebrew" id="ID_WILLIAM_CLASS_FEATURE_PRIMALBOUND_MIGHTY_LEAP">
    <description>
      <p>You can jump three times your normal distance, and take no fall damage from heights less than 40 feet if you land on your feet.</p>
    </description>
  </element>

  <element name="Extra Attack" type="Class Feature" source="Homebrew" id="ID_WILLIAM_CLASS_FEATURE_PRIMALBOUND_EXTRA_ATTACK">
    <description>
      <p>Starting at 5th level, you can attack twice, instead of once, whenever you take the Attack action on your turn.</p>
    </description>
    <rules>
      <stat name="extra attack:count" value="2" level="5" bonus="extra attack" />
    </rules>
  </element>

  <element name="Advanced Transformation" type="Class Feature" source="Homebrew" id="ID_WILLIAM_CLASS_FEATURE_PRIMALBOUND_ADVANCED_TRANSFORMATION">
    <description>
      <p>At 11th level, while transformed, you regain 5 HP at the start of each of your turns and your melee weapon attacks score a critical hit on a roll of 19â€“20.</p>
    </description>
  </element>

  <element name="Primal Dominance" type="Class Feature" source="Homebrew" id="ID_WILLIAM_CLASS_FEATURE_PRIMALBOUND_PRIMAL_DOMINANCE">
    <description>
      <p>At 18th level, your transformation now lasts for 10 minutes. While transformed, you are immune to the frightened and charmed conditions.</p>
    </description>
  </element>

  <element name="Ability Score Improvement" type="Class Feature" source="Homebrew" id="ID_WILLIAM_CLASS_FEATURE_ABILITYSCOREIMPROVEMENT_PRIMALBOUND">
    <description>
      <p>Increase one ability score by 2, or two by 1. Cannot exceed 20 in a single ability. Occurs at 4th, 8th, 12th, 16th, and 19th level.</p>
    </description>
    <rules>
      <select type="Class Feature" name="Ability Score Improvement, Primalbound" supports="Improvement Option,Primalbound" />
    </rules>
  </element>

  <element name="Primalbound Level Advancement" type="Class Progression" source="Homebrew" id="ID_WILLIAM_CLASS_PRIMALBOUND_PROGRESSION">
    <supports>ID_WILLIAM_CLASS_PRIMALBOUND</supports>
    <progression>
      <level index="1" feature="ID_WILLIAM_CLASS_FEATURE_PRIMALBOUND_BURST_OF_BRAWN,ID_WILLIAM_CLASS_FEATURE_PRIMALBOUND_PRIMAL_TRANSFORMATION" />
      <level index="2" feature="ID_WILLIAM_CLASS_FEATURE_PRIMALBOUND_BESTIAL_RESILIENCE" />
      <level index="3" feature="ID_WILLIAM_CLASS_FEATURE_PRIMALBOUND_MIGHTY_LEAP" />
      <level index="4" feature="ID_WILLIAM_CLASS_FEATURE_ABILITYSCOREIMPROVEMENT_PRIMALBOUND" />
      <level index="5" feature="ID_WILLIAM_CLASS_FEATURE_PRIMALBOUND_EXTRA_ATTACK" />
      <level index="6" />
      <level index="7" />
      <level index="8" feature="ID_WILLIAM_CLASS_FEATURE_ABILITYSCOREIMPROVEMENT_PRIMALBOUND" />
      <level index="9" />
      <level index="10" />
      <level index="11" feature="ID_WILLIAM_CLASS_FEATURE_PRIMALBOUND_ADVANCED_TRANSFORMATION" />
      <level index="12" feature="ID_WILLIAM_CLASS_FEATURE_ABILITYSCOREIMPROVEMENT_PRIMALBOUND" />
      <level index="13" />
      <level index="14" />
      <level index="15" />
      <level index="16" feature="ID_WILLIAM_CLASS_FEATURE_ABILITYSCOREIMPROVEMENT_PRIMALBOUND" />
      <level index="17" />
      <level index="18" feature="ID_WILLIAM_CLASS_FEATURE_PRIMALBOUND_PRIMAL_DOMINANCE" />
      <level index="19" feature="ID_WILLIAM_CLASS_FEATURE_ABILITYSCOREIMPROVEMENT_PRIMALBOUND" />
      <level index="20" />
    </progression>
  </element>
</elements>



