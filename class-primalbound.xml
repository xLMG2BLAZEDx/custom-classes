<?xml version="1.0" encoding="utf-8"?>
<elements>
  <info>
    <name>Primalbound</name>
    <description>A primal melee class inspired by weregorillas. Gains bonuses and breath weapon during transformation. No spellcasting.</description>
    <author>William Burruss</author>
    <update version="1.0">
      <file name="class-primalbound.xml" url="https://example.com/class-primalbound.xml" />
    </update>
  </info>

  <element name="Primalbound" type="Class" source="Homebrew" id="ID_WILLIAM_CLASS_PRIMALBOUND">
    <description>
      <p>Primalbound are fierce warriors who channel a bestial spirit, unleashing tremendous power and resilience in their transformed state.</p>
    </description>
    <setters>
      <set name="short">Primal shapeshifter with feral might and breath weapon.</set>
      <set name="hd">d10</set>
      <set name="spellcasting_ability" value="None" />
    </setters>
    <rules>
      <grant type="Proficiency" id="ID_PROFICIENCY_ARMOR_PROFICIENCY_LIGHT_ARMOR" />
      <grant type="Proficiency" id="ID_PROFICIENCY_ARMOR_PROFICIENCY_MEDIUM_ARMOR" />
      <grant type="Proficiency" id="ID_PROFICIENCY_ARMOR_PROFICIENCY_SHIELDS" />
      <grant type="Proficiency" id="ID_PROFICIENCY_WEAPON_PROFICIENCY_SIMPLE_WEAPONS" />
      <grant type="Proficiency" id="ID_PROFICIENCY_WEAPON_PROFICIENCY_MARTIAL_WEAPONS" />
      <grant type="Proficiency" id="ID_PROFICIENCY_SAVINGTHROW_STRENGTH" />
      <grant type="Proficiency" id="ID_PROFICIENCY_SAVINGTHROW_CONSTITUTION" />
      <select type="Proficiency" name="Skill Proficiency (Primalbound)" supports="ID_PROFICIENCY_SKILL_ATHLETICS|ID_PROFICIENCY_SKILL_ACROBATICS|ID_PROFICIENCY_SKILL_SURVIVAL|ID_PROFICIENCY_SKILL_INTIMIDATION|ID_PROFICIENCY_SKILL_NATURE" number="2"/>
    </rules>
  </element>

  <!-- Level-tagged Class Features -->
  <element name="Transformation" type="Class Feature" source="Homebrew" id="ID_WILLIAM_CLASS_FEATURE_PRIMALBOUND_TRANSFORMATION" level="1">
    <description>
      <p>Transform as a bonus action. While transformed: +2 melee damage, +1 AC, resistance to nonmagical B/P/S, 15-ft cone breath weapon (Dex save, 2d6 damage).</p>
    </description>
  </element>

  <element name="Burst of Brawn" type="Class Feature" source="Homebrew" id="ID_WILLIAM_CLASS_FEATURE_PRIMALBOUND_BRAWN" level="1">
    <description>
      <p>Advantage on Strength checks and saves while not wearing heavy armor.</p>
    </description>
  </element>

  <element name="Mighty Leap" type="Class Feature" source="Homebrew" id="ID_WILLIAM_CLASS_FEATURE_PRIMALBOUND_LEAP" level="3">
    <description>
      <p>Triple jump distance. No fall damage from heights under 40 ft if landing on feet.</p>
    </description>
  </element>

  <element name="Extra Attack" type="Class Feature" source="Homebrew" id="ID_WILLIAM_CLASS_FEATURE_PRIMALBOUND_EXTRA_ATTACK" level="5">
    <description>
      <p>Attack twice whenever you take the Attack action on your turn.</p>
    </description>
    <rules>
      <stat name="extra attack:count" value="2" level="5" bonus="extra attack" />
    </rules>
  </element>

  <element name="Advanced Transformation" type="Class Feature" source="Homebrew" id="ID_WILLIAM_CLASS_FEATURE_PRIMALBOUND_ADVANCED_TRANSFORMATION" level="11">
    <description>
      <p>While transformed: regain 5 HP/round if below half HP, crits on 19â€“20.</p>
    </description>
  </element>

  <element name="Primal Dominance" type="Class Feature" source="Homebrew" id="ID_WILLIAM_CLASS_FEATURE_PRIMALBOUND_DOMINANCE" level="18">
    <description>
      <p>Transformation lasts 10 min. Immune to frightened/charmed while transformed.</p>
    </description>
  </element>

  <!-- ASIs per level -->
  <element name="Ability Score Improvement (4)" type="Class Feature" source="Homebrew" id="ID_WILLIAM_CLASS_FEATURE_PRIMALBOUND_ASI_4" level="4">
    <description><p>Increase one ability score by 2 or two by 1 (max 20).</p></description>
    <rules><select type="Class Feature" name="ASI (Primalbound)" supports="Improvement Option,Primalbound" /></rules>
  </element>

  <element name="Ability Score Improvement (8)" type="Class Feature" source="Homebrew" id="ID_WILLIAM_CLASS_FEATURE_PRIMALBOUND_ASI_8" level="8">
    <description><p>Increase one ability score by 2 or two by 1 (max 20).</p></description>
    <rules><select type="Class Feature" name="ASI (Primalbound)" supports="Improvement Option,Primalbound" /></rules>
  </element>

  <element name="Ability Score Improvement (12)" type="Class Feature" source="Homebrew" id="ID_WILLIAM_CLASS_FEATURE_PRIMALBOUND_ASI_12" level="12">
    <description><p>Increase one ability score by 2 or two by 1 (max 20).</p></description>
    <rules><select type="Class Feature" name="ASI (Primalbound)" supports="Improvement Option,Primalbound" /></rules>
  </element>

  <element name="Ability Score Improvement (16)" type="Class Feature" source="Homebrew" id="ID_WILLIAM_CLASS_FEATURE_PRIMALBOUND_ASI_16" level="16">
